<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="cz.uhk.zemanpe2.semproject.LoginActivity">

    <Button
            android:text="@string/action_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnLogin"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" android:onClick="login"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/eTPassword"
            app:layout_constraintVertical_bias="0.109"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textNoSuggestions"
            android:ems="10"
            android:id="@+id/eTUsername"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.503"
            tools:text="Username" android:contentDescription="@string/prompt_username"
            app:layout_constraintTop_toBottomOf="@+id/tWUsername"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/eTPassword" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.503"
            tools:text="Password" android:contentDescription="@string/prompt_password"
            app:layout_constraintTop_toBottomOf="@+id/twPassword"/>
    <TextView
            android:text="@string/prompt_username"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:id="@+id/tWUsername"
            android:layout_marginTop="148dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="@string/prompt_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/twPassword" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/eTUsername" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>
